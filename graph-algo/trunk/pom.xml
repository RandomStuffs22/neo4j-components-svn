<?xml version="1.0" encoding="UTF-8"?>
<project>
	<parent>
		<groupId>org.neo4j</groupId>
		<artifactId>parent-pom</artifactId>
		<version>2</version>
		<relativePath>../../pom.xml</relativePath>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.neo4j</groupId>
	<artifactId>graph-algo</artifactId>
	<version>0.1-SNAPSHOT</version>
	<name>graph-algo</name>
	<description>Graph algorithms for neo4j</description>

	<!-- For custom complexity taglet -->
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<tags>
						<tag>
							<name>complexity</name>
							<placement>a</placement>
							<head>Complexity:</head>
						</tag>
					</tags>
				</configuration>
			</plugin>
		</plugins>
	</reporting>

	<scm>
		<connection>
			scm:svn:https://svn.neo4j.org/components/graph-algo/trunk/
		</connection>
		<url>https://trac.neo4j.org/browser/components/graph-algo
		</url>
	</scm>

	<issueManagement>
		<system>Trac</system>
		<url>https://trac.neo4j.org/query?component=graph-algo</url>
	</issueManagement>

	<licenses>
		<license>
			<name>GNU Affero General Public License, Version 3</name>
			<url>https://svn.neo4j.org/components/graph-algo/trunk/LICENSE.txt
			</url>
		</license>
	</licenses>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
		</dependency>
		<dependency>
			<groupId>org.neo4j</groupId>
			<artifactId>neo</artifactId>
			<version>1.0-b7-pre1</version>
		</dependency>
	</dependencies>

</project>
