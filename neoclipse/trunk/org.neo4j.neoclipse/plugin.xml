<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.neo4j.neoclipse.NeoCategory"
            name="Neoclipse">
      </category>
      <view
            allowMultiple="false"
            category="org.neo4j.neoclipse.NeoCategory"
            class="org.neo4j.neoclipse.view.NeoGraphViewPart"
            icon="icons/obj16/neo.ico"
            id="org.neo4j.neoclipse.view.NeoGraphViewPart"
            name="Neoclipse Graph">
      </view>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.neo4j.neoclipse.preference.NeoPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.neo4j.neoclipse.preference.NeoPreferencePage"
            class="org.neo4j.neoclipse.preference.NeoPreferencePage"
            id="org.neo4j.neoclipse.preference.NeoPreferencePage"
            name="Neoclipse">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.neo4j.neoclipse.perspective.NeoPerspectiveFactory"
            icon="icons/obj16/neo.ico"
            id="org.neo4j.neoclipse.NeoPerspective"
            name="Neoclipse">
      </perspective>
   </extension>
   
	<extension
		id="application"
		point="org.eclipse.core.runtime.applications">
		<application
        cardinality="singleton-global"
        thread="any"
        visible="true">
			<run
				class="org.neo4j.neoclipse.Application">
			</run>
		</application>
	</extension> 
	<extension id="neoclipseProduct" point="org.eclipse.core.runtime.products">
     <product name="Neoclipse Product" application="org.neo4j.neoclipse.application" description="Description">
        <property
              name="appName"
              value="Neoclipse Product">
        </property>
        <property
              name="aboutText"
              value="Graph database tool">
        </property>
        <property
              name="startupForegroundColor"
              value="C8D5EA">
        </property>
        <property
              name="startupMessageRect"
              value="7,220,441,20">
        </property>
        <property
              name="startupProgressRect"
              value="0,280,455,15">
        </property>
        <property
              name="preferenceCustomization"
              value="plugin_customization.ini">
        </property>
    </product>
  </extension>
 
</plugin>
