#!/bin/sh
# Small dummy shell-script to start Neo

# If NEO_HOME doesn't exist, assume wd is the base dir
if [ -z "$NEO_HOME" ]; then
	NEO_HOME="."
fi

LIB_FILES=`find $NEO_HOME/lib -follow -iname "*.jar"`
LIB_FILES=`echo $LIB_FILES | sed -e 's/ /:/g'`
NEO_CLASSPATH=$LIB_FILES:$NEO_HOME/target/classes

printf "NEO_HOME=%s\n" $NEO_HOME
printf "CLASSPATH=%s\n" $NEO_CLASSPATH

java -server -cp $NEO_CLASSPATH org.neo4j.impl.Main $*
